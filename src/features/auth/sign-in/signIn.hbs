<form id="signIn">
  <div class="auth__panel">
    <div class="auth">
      <div class="auth__title">
        Регистрация
      </div>
      <div class="divider"></div>

      <div class="auth__content">
        <label class="input__label" for='email'>
          Почта
        </label>
        <div class='input-field'>
          <input name="email" type="email" class='input-field__input' id='email' />
        </div>
        <div class="divider_xs"></div>

        <label class="input__label" for='login'>
          Логин
        </label>
        <div class='input-field'>
          <input name="login" class='input-field__input' id='login' />
        </div>
        <div class="divider_xs"></div>

        <label class="input__label" for='name'>
          Имя
        </label>
        <div class='input-field'>
          <input name="first_name" class='input-field__input' id='name' />
        </div>
        <div class="divider_xs"></div>

        <label class="input__label" for='last-name'>
          Фамилия
        </label>
        <div class='input-field'>
          <input name="second_name" class='input-field__input' id='last-name' />
        </div>
        <div class="divider_xs"></div>

        <label class="input__label" for='phone'>
          Телефон
        </label>
        <div class='input-field'>
          <input name="phone" class='input-field__input' id='phone' />
        </div>
        <div class="divider_xs"></div>

        <label class="input__label" for='password'>
          Пароль
        </label>
        <div class='input-field'>
          <input name="password" type="password" class='input-field__input' id='password' />
        </div>
        <div class="divider_xs"></div>

        <label class="input__label" for='password2'>
          Пароль (ещё раз)
        </label>
        <div class='input-field'>
          <input name="password" type="password" class='input-field__input' id='password2' />
        </div>
      </div>
    </div>


    <div class="divider"></div>
    <div class="button__panel">
      <button class="button button_fullWidth fullWidth">
        Зарегистрироваться
      </button>
      <div class="divider_xs"></div>
      <button class="button button_fullWidth button_primary_flat">
        Войти
      </button>
    </div>
  </div>
</form>
